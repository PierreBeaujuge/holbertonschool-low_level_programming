#include "holberton.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * create_array - function that creates an array of chars
 * and initializes it with a specific char
 *
 * @c: array of chars
 * @size: the size of the memory to print
 *
 * Return: address of the memory to print
 */

char *create_array(unsigned int size, char c)
{
	unsigned int i;
	char *pArray;

	if (size == 0)
		return (NULL);

	pArray = malloc(size * sizeof(char)); /* returns a pointer to the allocated memory */
	if (pArray == NULL)
		return (NULL);

	i = 0;
	while (i < size)
	{
		pArray[i] = c;
		i++;
	}
	return (pArray);
}
